{
  "name": "flashcard-hsk",
  "version": "2.0.0",
  "description": "A modern flashcard app for learning Chinese vocabulary with Tinder-like swipe interface",
  "main": "dist/index.html",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:gh": "vite build --base=/flashcard/",
    "preview": "vite preview",
    "preview:gh": "yarn build:gh && npx serve dist -l 3000 --single",
    "preview:gh-proper": "yarn build:gh && rd /s /q preview 2>nul & mkdir preview\\flashcard & xcopy /e /i dist preview\\flashcard && cd preview && npx http-server . -p 3000 -c-1 --cors -o /flashcard/",
    "serve": "http-server dist -p 3000 -c-1",
    "optimize": "npm run build && npm run analyze",
    "analyze": "npx vite-bundle-analyzer dist",
    "deploy": "npm run build:gh && gh-pages -d dist",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky install"
  },
  "keywords": [
    "flashcard",
    "chinese",
    "hsk",
    "learning",
    "education",
    "react",
    "vite",
    "pwa"
  ],
  "author": "Flashcard HSK Team",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gh-pages": "^6.3.0",
    "http-server": "^14.1.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "serve": "^14.2.5",
    "terser": "^5.26.0",
    "vite": "^7.2.2",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-pwa": "^0.17.4"
  },
  "dependencies": {
    "antd": "^5.12.8",
    "husky": "^9.1.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
